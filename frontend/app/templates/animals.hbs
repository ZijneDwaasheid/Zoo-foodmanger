{{page-title "Animals"}}
<div class="header-container">
  <h1>All Animals</h1>
  <Animal::Add />
</div>

{{#if this.model}}
  <ul>
    {{#each this.model as |animal|}}
      <li class="zoo">
        <div>
          <h3>{{animal.species}}</h3>  
          <div class="detail type">{{animal.diet}}</div>
        </div>
        <div>
          <Animal::Edit @animal={{animal}}/>
          <Animal::Remove @animal={{animal}}/>
        </div>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No animals found.</p>
{{/if}}
